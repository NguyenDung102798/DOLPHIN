@model DOLPHIN.DTO.NewsDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{ ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<h2 style="margin:20px">Thêm mới bài viết</h2>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Titile" class="control-label">Tiêu đề</label>
                        <input asp-for="Titile" class="form-control" />
                        <span asp-validation-for="Titile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Images" class="control-label">Ảnh bài viết</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input asp-for="Images" class="form-control custom-file-input" />
                                <label class="custom-file-label">Chọn tệp...</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"> Nội dung</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Refer" class="control-label">Nguồn dẫn</label>
                        <input asp-for="Refer" class="form-control" />
                        <span asp-validation-for="Refer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdatedById" class="control-label">Cập nhật bởi</label>
                        <select asp-for="UpdatedById" class="form-control" asp-items="ViewBag.UpdatedById"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedById" class="control-label">Tạo bởi</label>
                        <select asp-for="CreatedById" class="form-control" asp-items="ViewBag.CreatedById"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a href="/Admin/News/Index" class="btn btn-primary" style="margin-left:10px">Quay lại</a>
</div>
@section Scripts{
 <script>
     document.ready(function () {
         $('.custom-file-input').on("change", function () {
             var fileName = $(this).val().split("\\").pop();
             this.next('custom-file-label').html(fileName);
         })
     });
 </script>
}

